<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_empty_page"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/common_bg"
    android:clickable="true"
    android:visibility="gone"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/imgEmpty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/nodate" />

    <TextView
        android:id="@+id/tvEmtyHit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgEmpty"
        android:layout_marginLeft="15.0dip"
        android:layout_marginTop="11.0dip"
        android:layout_marginRight="15.0dip"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="17.0sp"
        android:textColor="@color/common_text_light"
        android:text="暂时没有数据"/>
    <TextView
        android:id="@+id/tvEmptyButton"
        android:layout_width="150.0dip"
        android:layout_height="44.0dip"
        android:layout_below="@id/tvEmtyHit"
        android:layout_marginTop="24.5dip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_common_selector"
        android:gravity="center"
        android:textSize="17.0sp"
        android:textColor="@color/common_text"
        android:visibility="gone"
        android:text="去求聊"  />
</LinearLayout>