<?xml version="1.0" encoding="utf-8"?>
<com.jess.arms.widget.autolayout.AutoToolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/public_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/public_height_200px"
    android:background="@android:color/transparent"
    app:contentInsetStart="0dp"
    app:theme="@style/public_ToolbarTheme"
    app:popupTheme="@style/public_OverflowMenu" >

    <com.zhy.autolayout.AutoRelativeLayout
        android:id="@+id/public_toolbar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="left">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/public_mar_left_30px"
            android:layout_marginRight="@dimen/public_mar_right_30px"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

    </com.zhy.autolayout.AutoRelativeLayout>


</com.jess.arms.widget.autolayout.AutoToolbar>