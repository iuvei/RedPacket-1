<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/spacing_xl"
    android:background="@mipmap/rc_voip_menu_bg"
    android:orientation="vertical"
    tools:ignore="ResourceName">
    <LinearLayout
        android:id="@+id/ll_add_firend"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_talkadd_friend"
        android:layout_marginTop="@dimen/spacing_m"
        android:layout_marginBottom="@dimen/spacing_m"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/under_line_add_firend"
        android:textColor="@color/public_white"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/text_sub_title"
        android:layout_marginLeft="@dimen/spacing_xl"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_scan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_talk_scan"
        android:layout_marginTop="@dimen/spacing_m"
        android:layout_marginBottom="@dimen/spacing_m"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/under_line_scan"
        android:textColor="@color/public_white"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/text_sub_title"
        android:layout_marginLeft="@dimen/spacing_xl"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_qr"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_talk_qr"
        android:layout_marginTop="@dimen/spacing_m"
        android:layout_marginBottom="@dimen/spacing_m"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/under_line_qr"
        android:textColor="@color/public_white"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/text_sub_title"
        android:layout_marginLeft="@dimen/spacing_xl"/>
    </LinearLayout>
</LinearLayout>