<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">
    <include layout="@layout/title_layout_both_text"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xl"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_contact_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/alipay"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_xl">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textColor="@color/public_black"/>
            <ImageView
                android:id="@+id/tv_contact_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/news_icon_call"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_marginLeft="@dimen/spacing_m"/>
            <TextView
                android:id="@+id/account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号："
                android:layout_below="@+id/tv_name"
                android:textColor="@color/public_black"/>
            <TextView
                android:id="@+id/tv_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/account"
                android:layout_below="@+id/tv_name"
                android:text="123456"
                android:textColor="@color/public_black"
                android:layout_marginLeft="@dimen/spacing_m"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="设置备注"
        android:gravity="center_vertical"
        android:textColor="@color/public_black"
        android:background="@color/white"
        android:padding="@dimen/spacing_xl"
        android:drawableRight="@drawable/ic_arrow_right"/>

    <Button
        android:id="@+id/btn_send_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="发送消息"
        android:layout_marginTop="@dimen/spacing_xxxxl"
        android:layout_marginLeft="@dimen/spacing_xl"
        android:layout_marginRight="@dimen/spacing_xl"
        android:textColor="@color/white"
        android:background="@drawable/btn_ad_shape"/>
</LinearLayout>