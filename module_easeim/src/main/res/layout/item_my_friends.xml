<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_my_friends"
    style="@style/public_CommonPadding_m"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_my_friends"
        android:layout_width="@dimen/room_icon_size"
        android:layout_height="@dimen/room_icon_size"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_custom_friend" />

    <TextView
        android:id="@+id/tv_my_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_my_friends"
        android:layout_toLeftOf="@id/iv_friends_round_red"
        android:layout_marginTop="@dimen/spacing_xxs"
        android:layout_marginLeft="@dimen/spacing_m"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/common_text"
        android:textSize="@dimen/text_normal"
        android:text="我的好友"/>

    <TextView
        android:id="@+id/tv_friends_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_my_friends"
        android:layout_toLeftOf="@id/iv_friends_round_red"
        android:layout_marginLeft="@dimen/spacing_m"
        android:layout_marginTop="@dimen/spacing_xs"
        android:layout_toRightOf="@id/iv_my_friends"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/common_text_light"
        android:textSize="@dimen/text_small"
        android:text="@string/no_unread_messages"/>

    <ImageView
        android:id="@+id/iv_friends_round_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:src="@drawable/round_msg_shape"/>
</RelativeLayout>
