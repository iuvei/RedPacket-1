<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_item"
    android:paddingRight="@dimen/spacing_xl"
    android:paddingTop="@dimen/spacing_m"
    android:paddingBottom="@dimen/spacing_m"
    android:paddingLeft="@dimen/spacing_xl">
    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="昵称"
        android:textSize="@dimen/text_normal"
        android:textColor="@color/public_black"
        />
    <ImageView
        android:id="@+id/iv_redpack"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@+id/tv_nickname"
        android:layout_marginLeft="@dimen/spacing_xl"
        android:src="@mipmap/pingan"
        />
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-9-7 14:50:54"
        android:layout_below="@+id/tv_nickname"
        android:layout_marginTop="@dimen/spacing_xxs"
        />
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.52元"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_big_title"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/spacing_xxs"
        />
</RelativeLayout>