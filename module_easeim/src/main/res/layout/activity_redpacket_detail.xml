<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#FE4C56"
        ></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:paddingRight="@dimen/spacing_xl"
        android:background="#FE4C56">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:padding="@dimen/spacing_m"
            android:src="@drawable/ease_mm_title_back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/public_CommonTitleText"
            android:layout_centerInParent="true"
            android:textColor="@color/public_white"
            tools:text="@string/public_app_name"/>
        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            style="@style/public_CommonTitleText"
            android:textSize="@dimen/text_sub_title"
            android:text="确认"
            android:textColor="@color/public_white"
            />

    </RelativeLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_red_title"/>
                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="@dimen/avatar_size"
                        android:layout_height="@dimen/avatar_size"
                        android:layout_marginTop="@dimen/spacing_xxl"
                        android:layout_gravity="center_horizontal"
                        android:src="@mipmap/icon_default_avatar"/>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/text_sub_title"
                    android:textColor="@color/common_text"
                    tools:text="测试"/>
                    <ImageView
                        android:id="@+id/iv_ping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/redpacket_pin"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/spacing_s"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_money_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/common_text"
                    android:textStyle="bold"
                    tools:text="9-6"/>

                <LinearLayout
                    android:id="@+id/ll_my_getmoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_my_getmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_title"
                        android:textColor="@color/common_text"
                        android:textStyle="bold"
                        android:text="0.00"/>
                    <TextView
                        android:id="@+id/tv_niuniu_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_m"
                        android:text="元"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/ll_countdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_normal"
                        android:textColor="@color/common_text"
                        android:text="本包剩余时间"/>
                    <cn.iwgang.countdownview.CountdownView
                        android:id="@+id/cdv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_m"
                        android:layout_gravity="center"
                        app:isHideTimeBackground="true"
                        app:isShowMinute="true"
                        app:isShowSecond="true"
                        app:suffix=":"
                        app:suffixGravity="center"
                        app:isTimeTextBold="true"
                        app:suffixTextColor="@color/text_red"
                        app:suffixTextSize="@dimen/text_normal"
                        app:timeTextColor="@color/text_red"
                        app:timeTextSize="@dimen/text_normal" />

                </LinearLayout>


                <TextView
                    android:id="@+id/tv_settlement_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/common_text_light"
                    android:textStyle="bold"
                    tools:text="结算中"/>

                <TextView
                    android:id="@+id/tv_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/public_CommonPadding_m"
                    android:textSize="@dimen/text_normal"
                    android:textColor="@color/common_text"
                    android:background="@color/public_white"/>

                <LinearLayout
                    android:id="@+id/ll_niuniu_result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_gravity="center_horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/public_black"
                        android:text="庄赢"/>
                    <TextView
                        android:id="@+id/tv_banker_win"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:layout_marginLeft="@dimen/spacing_m"
                        android:textColor="@color/public_red"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/public_black"
                        android:text="闲赢"/>
                    <TextView
                        android:id="@+id/tv_buy_win"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:layout_marginLeft="@dimen/spacing_m"
                        android:textColor="@color/public_red"/>
                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_garb_redpacket"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>