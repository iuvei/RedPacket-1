<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#00ffffff">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_red_packet_bg2"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_red_packet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_head"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:src="@mipmap/icon_default_avatar" />

            <TextView
                android:id="@+id/tv_nick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                tools:text="测试"
                android:textColor="#DBBC83"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="3dp"
                android:text="发了一个红包，金额随机"
                android:textColor="#DBBC83"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="恭喜发财，大吉大利"
                android:textColor="#DBBC83"
                android:textSize="16sp" />

            <RelativeLayout
                android:id="@+id/rel_open"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp">

                <ImageView
                    android:id="@+id/img_open"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_red_packet_open"
                    android:background="@drawable/anim_open_redpacket"/>

                <ImageView
                    android:id="@+id/img_opening"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/anim_open_redpacket"
                    android:visibility="gone" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_red_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:paddingLeft="20dp"
                android:paddingTop="15dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp"
                android:text="查看红包详情"
                android:textColor="#DBBC83" />

        </LinearLayout>
        <ImageButton
            android:id="@+id/ibtn_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@drawable/ic_red_packet_exit"/>

    </RelativeLayout>
</RelativeLayout>
