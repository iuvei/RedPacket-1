<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_item"
    android:paddingRight="@dimen/spacing_xl"
    android:paddingTop="@dimen/spacing_m"
    android:paddingBottom="@dimen/spacing_m"
    android:paddingLeft="@dimen/spacing_xl">
    <TextView
        android:id="@+id/tv_takemoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提现"
        android:textColor="@color/public_black"
        />
    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100000000.0"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/tv_taketime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-9-7 14:50:54"
        android:layout_below="@+id/tv_takemoney"
        android:layout_marginTop="@dimen/spacing_xxs"
        />
    <TextView
        android:id="@+id/tv_statue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="已完成"
        android:layout_below="@+id/tv_takemoney"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/spacing_xxs"
        />
</RelativeLayout>