<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_gray"
    android:orientation="vertical">
    <include layout="@layout/title_layout"></include>
    <View style="@style/discover_style_view"></View>
    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/spacing_xl"
        android:paddingRight="@dimen/spacing_xl"
        android:background="@color/white"
        android:hint="请输入真实姓名"
        />
    <View style="@style/discover_style_view"></View>
    <EditText
        android:id="@+id/et_idnum"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="@dimen/spacing_xl"
        android:paddingRight="@dimen/spacing_xl"
        android:background="@color/white"
        android:hint="请输入身份证号"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="实名认证后不可修改，请务必填写正确，如果信息错误将会导致无法充值和提现"
        android:padding="@dimen/spacing_xl"/>
    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_xl"
        android:layout_marginRight="@dimen/spacing_xl"
        android:background="@drawable/btn_ad_shape"
        android:textColor="@color/white"
        android:text="确认设置"/>
</LinearLayout>