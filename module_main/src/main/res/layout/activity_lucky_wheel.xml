<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/luck_lottery_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <include layout="@layout/title_layout_both_text"></include>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/luck_lottery_theme"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/zhuanpang_bg"
        >
        <me.jessyan.armscomponent.commonres.view.PieView
            android:id="@+id/zpan"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/iv_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go_no"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_luckynum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剩余抽奖次数：0次"
        android:layout_marginTop="@dimen/spacing_m"
        android:textColor="@color/white"/>
</LinearLayout>