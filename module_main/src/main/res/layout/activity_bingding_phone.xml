<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">
    <include layout="@layout/title_layout"></include>
    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:hint="请输入手机号码"
        android:layout_marginTop="@dimen/spacing_xl"
        android:textColor="@color/public_black"
        android:paddingLeft="@dimen/spacing_xl"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xl"
        android:background="@color/white"
        android:layout_marginTop="@dimen/spacing_m"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/et_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入短信验证码"
            android:background="@null"/>
        <TextView
            android:id="@+id/tv_get_code"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="@dimen/spacing_m"
            android:background="@drawable/btn_ad_shape"
            android:text="获取验证码"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxxl"
        android:layout_marginRight="@dimen/spacing_xl"
        android:layout_marginLeft="@dimen/spacing_xl"
        android:text="确定"
        android:background="@drawable/btn_ad_shape"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/text_title"/>
</LinearLayout>