<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@mipmap/yinlian_bg"
        android:paddingTop="20dp"
        android:paddingLeft="@dimen/spacing_xl"
        android:id="@+id/rl_blank">
        <ImageView
            android:id="@+id/iv_blank_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/alipay"
            />
        <TextView
            android:id="@+id/tv_blankName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/iv_blank_logo"
            android:layout_marginLeft="@dimen/spacing_xl"
            android:text="支付宝"/>
        <TextView
            android:id="@+id/tv_blank_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/iv_blank_logo"
            android:layout_below="@+id/tv_blankName"
            android:layout_marginTop="@dimen/spacing_l"
            android:layout_marginLeft="@dimen/spacing_xl"
            android:text="支付宝"/>
        <TextView
            android:id="@+id/tv_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:text="1234**********4321"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/spacing_xxl"/>
    </RelativeLayout>
</LinearLayout>