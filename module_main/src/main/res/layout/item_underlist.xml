<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/rl_item"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/spacing_xl"
    android:layout_marginRight="@dimen/spacing_xl">
    <TextView
        android:id="@+id/tv_nickname"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="昵称"
        android:layout_weight="1"
        android:textColor="@color/public_black"
        />
    <TextView
        android:id="@+id/tv_underline_num"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/public_color_FF06CB7E"
        android:text="12"
        />
    <TextView
        android:id="@+id/tv_creatDate"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textColor="@color/public_black"
        android:text="2019-9-7 14:50:54"
        />
</LinearLayout>