<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/public_include_title"/>

    <LinearLayout
        android:id="@+id/ll_head_portrait"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/public_white"
        android:gravity="center_vertical"
        style="@style/public_CommonPadding_m">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/common_text"
            android:textSize="@dimen/text_normal"
            android:text="@string/head_portrait"/>
        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:src="@drawable/ic_user_avatar"/>
    </LinearLayout>

    <View style="@style/public_CommonLine"/>
    <LinearLayout
        android:id="@+id/ll_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/public_white"
        android:gravity="center_vertical"
        style="@style/public_CommonPadding_m">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/common_text"
            android:textSize="@dimen/text_normal"
            android:text="@string/nickname"/>
        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_text"
            android:textSize="@dimen/text_normal"
            tools:text="测试"/>
    </LinearLayout>

    <View style="@style/public_CommonLine"/>
    <LinearLayout
        android:id="@+id/ll_sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/public_white"
        android:gravity="center_vertical"
        style="@style/public_CommonPadding_m">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/common_text"
            android:textSize="@dimen/text_normal"
            android:text="@string/sex"/>
        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_text"
            android:textSize="@dimen/text_normal"
            tools:text="男"/>
    </LinearLayout>

    <View style="@style/public_CommonLine"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/public_white"
        android:gravity="center_vertical"
        style="@style/public_CommonPadding_m">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/common_text"
            android:textSize="@dimen/text_normal"
            android:text="@string/public_phone_number"/>
        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_text"
            android:textSize="@dimen/text_normal"
            tools:text="13412341234"/>
    </LinearLayout>

    <View style="@style/public_CommonLine"/>
    <LinearLayout
        android:id="@+id/ll_qrcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/public_white"
        android:gravity="center_vertical"
        style="@style/public_CommonPadding_m">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/common_text"
            android:textSize="@dimen/text_normal"
            android:text="@string/head_portrait"/>
        <ImageView
            android:id="@+id/iv_qrcode"
            android:layout_width="@dimen/avatar_size_small"
            android:layout_height="@dimen/avatar_size_small"
            android:src="@drawable/ic_default"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xl"
        android:layout_marginTop="@dimen/spacing_xxl"
        android:layout_marginEnd="@dimen/spacing_xl"
        android:background="@drawable/btn_ad_shape"
        android:text="@string/public_save"
        android:textColor="@color/public_white"
        android:textSize="@dimen/text_normal" />

</LinearLayout>