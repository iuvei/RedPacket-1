<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">
    <include layout="@layout/title_layout"></include>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="请选择银行卡类型"
        android:textColor="@color/public_black"
        android:gravity="center_vertical"
        android:background="@color/text_gray"
        android:textSize="@dimen/text_sub_title"
        android:paddingLeft="@dimen/spacing_xl"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="@dimen/spacing_xl"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银行"
            android:textColor="@color/public_black"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/text_normal"/>
        <TextView
            android:id="@+id/tv_chooseBlank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="@color/text_gray"
            android:textColor="@color/gray_66"
            android:text="请选择银行"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_xl"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_blank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View style="@style/discover_style_view"
            android:layout_height="1dp"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/spacing_xl"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支行"
                android:textColor="@color/public_black"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_normal"/>
            <EditText
                android:id="@+id/et_lower_bank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColorHint="@color/text_gray"
                android:textColor="@color/public_black"
                android:layout_weight="1"
                android:hint="请填写开户行名称"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_xl"/>
            <ImageView
                android:id="@+id/iv_delect_blankName"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/spacing_xl"
                android:visibility="invisible"
                android:src="@mipmap/rc_cs_delete"/>
        </LinearLayout>
        <View style="@style/discover_style_view"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/spacing_xl"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡号"
                android:textColor="@color/public_black"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_normal"/>
            <EditText
                android:id="@+id/et_card_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColorHint="@color/text_gray"
                android:textColor="@color/public_black"
                android:layout_weight="1"
                android:hint="请输入银行卡号"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_xl"/>
            <ImageView
                android:id="@+id/iv_delect_cardNum"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/spacing_xl"
                android:visibility="invisible"
                android:src="@mipmap/rc_cs_delete"/>
        </LinearLayout>
        <View style="@style/discover_style_view"></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:paddingLeft="@dimen/spacing_xl"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="借记卡"
                android:textColor="@color/public_black"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_normal"/>
            <RadioGroup
                android:id="@+id/rg_cardtype"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <RadioButton
                    android:id="@+id/rb_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/public_black"
                    android:text="是"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_xl"/>
                <RadioButton
                    android:id="@+id/rb_no"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/public_black"
                    android:text="否"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/spacing_xl"/>
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_xl"
        android:background="@drawable/btn_ad_shape"
        android:textColor="@color/white"
        android:text="下一步"/>
</LinearLayout>