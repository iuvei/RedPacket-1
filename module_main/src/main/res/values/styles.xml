<resources>
    <style name="WelcomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/launch_bg</item>
    </style>
    <style name="home_tab_style">
        <item name="android:layout_width">24.0dip</item>
        <item name="android:layout_height">24.0dip</item>
        <item name="android:layout_marginTop">2.0dip</item>
    </style>
    
    <style name="grid_item_style">
        <item name="android:padding">@dimen/spacing_l</item>
        <item name="android:drawablePadding">@dimen/spacing_xs</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <item name="android:textColor">@color/common_text_light</item>
    </style>

    <style name="input_tag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">@dimen/text_sub_title</item>
    </style>

    <style name="input_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">13</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/spacing_m</item>
        <item name="android:textColorHint">@color/text_black_99</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_sub_title</item>
    </style>

    <style name="discover_style_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@color/gray</item>
    </style>

    <style name="discover_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/white</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="discover_layout_text_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/public_black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="discover_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
</resources>
